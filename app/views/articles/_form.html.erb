<% if @article.errors.any? %>
 <h2>The following errors prevented the article from saving:</h2>
 <ul>
 <% @article.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
<div class="columns">
 <div class="column is-12">
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form is-grouped">
   <div class="label column is-2">
    <%= f.label :title %>
   </div>
   <div class="column is-6">
    <%= f.text_field :title, class: "control", placeholder: "Title of article", autofocus: true %>
   </div>
  </div>
  <div class="form is-grouped">
   <div class="label column is-2">
    <%= f.label :description %>
   </div>
   <div class="column is-6">
    <%= f.text_area :description, rows: 10, class: "control", placeholder: "Body of article" %>
   </div>
  </div>
  <div class="form is-grouped">
   <div class="column is-10">
    <%= f.submit class: 'button is-primary is-large' %>
   </div>
  </div><% end %>
 </div>
</div>